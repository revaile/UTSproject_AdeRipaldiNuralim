<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmationActivity">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Food"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Confirmation Nama Makanan -->
    <TextView
        android:id="@+id/foodNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name: Batagor"
        android:textSize="18sp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Confirmation Jumlah Porsi -->
    <TextView
        android:id="@+id/servingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Servings: 2 pax"
        android:textSize="18sp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/foodNameText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Confirmation Nama pengorder -->
    <TextView
        android:id="@+id/orderingNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordering Name: Usep"
        android:textSize="18sp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/servingsText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Input Catatan Tambahan -->
    <TextView
        android:id="@+id/notesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Notes: Tidak Pedas"
        android:textSize="18sp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/orderingNameText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Thank You Note -->
    <TextView
        android:id="@+id/thankYouText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Thanks for your order and please wait for delivering by nearest courier"
        android:textStyle="bold"
        android:textSize="29sp"
        android:gravity="center"
        android:paddingTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/notesText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Back to Menu Button -->
    <Button
        android:id="@+id/backtoMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back to Menu"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
